{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [ ".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"],
      "dotEnv": [".env"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:ui": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [".env"]
    }
  }
}